[ui]
username = Kosma Moczek <kosma@kosma.pl>

[extensions]
color =
record =
shelve = $HOME/.hgrc.d/hgshelve.py

[color]
diff.trailingwhitespace = bold red_background

[patch]
eol = auto

[extensions]
hgext.extdiff =
graphlog =
mq =
rebase =

[extdiff]
cmd.kdiff3 =

[merge-tools]
kdiff3.args = $base $local $other -o $output

[alias]
review = diff -r "review('$1','$2')"

[revsetalias]
review($1, $2) = ancestor($1, $2)..$2

%include ~/.hgrc.d/$HOSTNAME.cfg
